$orderedWeekdays = [
    "Sunday",
    "Monday",
    "Tuesday",
    "Wednesday",
    "Thursday",
    "Friday",
    "Saturday"
];

// Sort the weekdays based on the order defined
usort($weekdays, function ($a, $b) use ($orderedWeekdays) {
    return array_search($a, $orderedWeekdays) <=> array_search($b, $orderedWeekdays);
});

// Output the sorted weekdays
print_r($weekdays);
